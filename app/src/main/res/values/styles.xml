<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryTextColor</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RvItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActivityAddItemTitle">
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RvItemDescription">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="ActivityAddDescription">
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="TableItemTaskStatus">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TableItemTaskDate">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
